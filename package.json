{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/@hecate/core",
        "packages/@hecate/h-button",
        "packages/@hecate/h-code-mirror",
        "packages/@hecate/h-code-editor",
        "packages/@hecate/h-icon-list",
        "packages/@hecate/form-renderer",
        "packages/@hecate/form-generator"
    ],
    "scripts": {
        "start": "yarn workspaces run start",
        "push": "yarn commit && git push --set-upstream origin develop",
        "commit": "git add . && git status && git-cz",
        "ws:core": "yarn workspace @hecate/core",
        "ws:renderer": "yarn workspace @hecate/form-renderer",
        "ws:generator": "yarn workspace @hecate/form-generator",
        "ws:button": "yarn workspace @hecate/h-button",
        "ws:mirror": "yarn workspace @hecate/h-code-mirror",
        "ws:editor": "yarn workspace @hecate/h-code-editor",
        "ws:iconlist": "yarn workspace @hecate/h-icon-list",
        "storybook": "start-storybook -p 9898"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-lerna-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(vue|js)": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/runtime": "^7.12.1",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-image": "^2.0.5",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-multi-entry": "^4.0.0",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-strip": "^2.0.0",
        "@vue/cli-plugin-babel": "^4.5.8",
        "@vue/cli-plugin-eslint": "^4.5.8",
        "@vue/cli-service": "^4.5.8",
        "@vue/eslint-config-prettier": "^6.0.0",
        "autoprefixer": "9.8.6",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.2.2",
        "compression-webpack-plugin": "^6.0.5",
        "cross-env": "^7.0.2",
        "css-loader": "^5.0.0",
        "cssnano": "^4.1.10",
        "cssnano-preset-default": "^4.0.7",
        "cz-lerna-changelog": "^2.0.3",
        "eslint": "^7.12.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-vue": "^7.1.0",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.5.1",
        "node-sass": "^5.0.0",
        "postcss": "7.0.35",
        "prettier": "^2.1.2",
        "rollup": "^2.33.1",
        "rollup-plugin-postcss": "^3.1.8",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "5.1.9",
        "rollup-plugin-vuetify": "^0.2.4",
        "standard": "^16.0.1",
        "vue-loader": "^15.9.5",
        "vue-template-compiler": "^2.6.12",
        "webpack": "4.44.2",
        "webpack-bundle-analyzer": "^3.9.0"
    },
    "dependencies": {
        "vue": "^2.6.12"
    }
}
