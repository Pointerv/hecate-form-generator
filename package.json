{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/@hecate/*",
        "packages/*"
    ],
    "scripts": {
        "start": "yarn workspaces run start",
        "push": "yarn commit && git push --set-upstream origin develop",
        "commit": "git add . && git status && git cz",
        "ws:core": "yarn workspace @hecate/core",
        "ws:renderer": "yarn workspace @hecate/form-renderer",
        "ws:generator": "yarn workspace @hecate/form-generator",
        "storybook": "start-storybook -p 9898"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-customizable"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(vue|js)": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/runtime": "^7.11.2",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-multi-entry": "^4.0.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-strip": "^2.0.0",
        "@vue/cli-plugin-babel": "^4.5.6",
        "@vue/cli-plugin-eslint": "^4.5.6",
        "@vue/cli-service": "^4.5.6",
        "@vue/eslint-config-prettier": "^6.0.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "commitizen": "^4.2.1",
        "cross-env": "^7.0.2",
        "cz-customizable": "^6.3.0",
        "eslint": "^7.10.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-vue": "^6.2.2",
        "husky": "^4.3.0",
        "lerna": "^3.22.1",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "rollup": "^2.28.2",
        "rollup-plugin-terser": "^7.0.2",
        "standard": "^14.3.4",
        "tslint": "^6.1.3",
        "typescript": "^4.0.3",
        "vue-template-compiler": "^2.6.12",
        "webpack": "^4.44.2"
    },
    "dependencies": {
        "vue": "^2.6.12"
    }
}
